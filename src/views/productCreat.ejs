<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.1/css/all.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/general.css" />
  <link rel="stylesheet" href="/styles/productCreat.css" />
  <title>ToyHub</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
    <main class='main main-product'>
      <a class='back-button' href='/'> <-Volvel al inicio</a>
      <section class='product-add-container'>
        <form action='/products' method='POST'>
          <h1 class='product-add-title'>Añadir Producto</h1>
          <div class='product-add-form-group'>
            <label for='name'>Nombre</label>
            <input type='text' id='name' name='name' class='form-control' required />
          </div>
          <div class='product-add-form-group'>
            <label for='price'>Precio</label>
            <input type='number' id='price' name='price' class='form-control' required />
          </div>
          <div class='product-add-form-group'>
            <label for='share'>Cantidad de cuotas</label>
            <input type='number' id='share' name='share' class='form-control' required />
          </div>
          <div class='product-add-form-group'>
            <label for='img'>Imagen</label>
            <input type='file' id='img' name='img' accept='image/*' class='form-control' required />
          </div>
          <div class='product-add-form-group'>
            <label for='category'>Categoria</label>
            <select name='category' id='category'>
              <option value='Peluches'>Peluches</option>
              <option value='Figuras-de-Accion'>Figuras de Accion</option>
              <option value='Muñecas'>Muñecas</option>
            </select>
          </div>
          <div class='product-add-form-group'>
            <label for='stock'>Cantidad de producto disponibles</label>
            <input type='text' name='stock' id='stock'>
          </div>
          <div class='product-add-form-group'>
            <label for='brand'>Marca</label>
            <input type='text' name='brand' id='brand'>
          </div>
          <div class='product-add-form-group'>
            <label for='description'>Descripcion</label>
            <textarea name='description' id='description' cols='30' rows='10'></textarea>
          </div>
          <div class='product-add-form-actions'>
            <button type='submit' class='btn btn-primary'>Guardar</button>
            <button type='reset' class='btn btn-primary'>Cancelar</button>
          </div>
        </form>
      </section>
      <section class='product-edit-container'>
        <div class='product-edit-list'>
          <h1 class='product-add-title'>Editar Productos</h1>
          <table>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Categoria</th>
              <th>Link</th>
              <th>Marca</th>
            </tr>
            <% products.map((product)=>{ %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td><a href='/products/<%= product.id %>/edit'>Editar</a></td>
                <td><%= product.brand %></td>
              </tr>  
            <% }) %>
          </table>
        </div>
      </section>
    </main>
    <%- include('./partials/footer.ejs') %>
      <!-- Script de Bootstrap (jQuery y Popper.js) -->
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-buv2ZR7UpB3ZU8V+1zAZcI3LOdG2DQpIe+blpEj/5O8Dz87RNX/6beJYFQciG7Dl"
        crossorigin="anonymous"></script>

</body>

</html>